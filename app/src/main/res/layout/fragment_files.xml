<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.FilesFragment">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_12sdp"
        app:cardBackgroundColor="#f9faf9"
        app:cardElevation="@dimen/_6sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#dadddf"
        app:strokeWidth="1dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.3">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/circleView"
                    android:layout_width="@dimen/_115sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:clickable="false"
                    android:progress="40"
                    CircleProgressView:layout_constraintBottom_toBottomOf="parent"
                    CircleProgressView:layout_constraintEnd_toEndOf="parent"
                    CircleProgressView:layout_constraintStart_toStartOf="parent"
                    CircleProgressView:layout_constraintTop_toTopOf="parent"
                    CircleProgressView:trackColor="#DCEFFE"
                    app:indicatorColor="@color/mainthemecolor"
                    app:indicatorSize="60dp" />


                <TextView
                    android:id="@+id/percent_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    CircleProgressView:layout_constraintBottom_toBottomOf="@+id/circleView"
                    CircleProgressView:layout_constraintEnd_toEndOf="@+id/circleView"
                    CircleProgressView:layout_constraintStart_toStartOf="@+id/circleView"
                    CircleProgressView:layout_constraintTop_toTopOf="@+id/circleView" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/constraintLayout"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/blueDot"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/dot_blue" />

                    <TextView
                        android:id="@+id/txtUsedBlue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@id/blueDot"
                        android:lines="1"
                        android:singleLine="true"
                        android:text="Used"
                        android:textColor="#716c96"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/txtUsed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtUsedBlue"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@id/blueDot"
                        android:textColor="#716c96"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_35sdp">

                    <ImageView
                        android:id="@+id/grayDot"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/dot_gray" />

                    <TextView
                        android:id="@+id/txtUsedGray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@id/grayDot"
                        android:lines="1"
                        android:singleLine="true"
                        android:text="Free"
                        android:textColor="#716c96"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/txtFree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtUsedGray"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@id/grayDot"
                        android:textColor="#716c96"
                        android:textStyle="bold" />


                </RelativeLayout>


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardHistory">


