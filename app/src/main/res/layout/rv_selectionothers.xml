<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:strokeColor="#EAEAEA"
    android:layout_marginHorizontal="@dimen/_12sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/_1sdp"
    android:layout_height="@dimen/_62sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/fileimageHolder"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_pdf"
            android:layout_marginStart="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fileName"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_12sdp"
            android:text="Encrypted data file.pdf"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/fileSize"
            app:layout_constraintStart_toEndOf="@+id/fileimageHolder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/fileSize"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_width="wrap_content"
            android:textColor="#8A8A8A"
            android:layout_marginStart="@dimen/_12sdp"
            android:textSize="@dimen/_9sdp"
            android:layout_height="wrap_content"
            android:text="Encrypted data file.pdf"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fileimageHolder"
            app:layout_constraintTop_toBottomOf="@+id/fileName" />


        <ImageView
            android:id="@+id/checkImage"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_unselected"
            android:layout_marginEnd="@dimen/_22sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>