<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4B636262"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/timerLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_above="@+id/calculating"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/invitation_to_connect"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/mainthemecolor"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/counterText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/white"
            android:gravity="center"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/calculating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/animation_view"
        android:layout_centerHorizontal="true"
        android:text="Connecting..."
        android:textColor="@color/mainthemecolor"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_140sdp"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:padding="@dimen/_10sdp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/connectinganimation"
        app:lottie_loop="true" />


</RelativeLayout>